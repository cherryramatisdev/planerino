<div class="w-full h-2/3 grid grid-cols-4 gap-2">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% unless @months.empty? %>
    <% @months.each do |month| %>
      <div class="w-full bg-gray-200 rounded-lg flex items-center justify-center">
        <%= link_to month.name, month_path(month) %>
      </div>
    <% end %>
  <% end %>
</div>
