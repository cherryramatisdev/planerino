<%= render 'layouts/header' %>

<%= render 'layouts/container' do %>
  <%= form_for resource, {
    as: resource_name,
    url: registration_path(resource_name),
    html: {class: "w-full flex flex-col items-center justify-center"}
  } do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <% if notice %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block"><%= notice %></p>
  <% end %>

  <% if alert %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block"><%= alert %></p>
  <% end %>

  <%= render 'layouts/card' do %>
    <div class="w-full flex flex-col p-2">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field mt-2">
        <%= f.label :senha %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres minimos)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field mt-2">
        <%= f.label :confirmação_senha %><br />
        <%= f.password_field :confirmação_senha, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Cadastrar", class: "w-2/4 bg-blue-700 mt-5 mb-2 px-4 py-2 rounded-xl text-white" %>
      </div>
    </div>
  <% end %>
<% end %>
<% end %>

<%= render "devise/shared/links" %>
