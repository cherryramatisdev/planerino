<%= render 'layouts/header', path: month_path(@month_id) %>

<%= render 'layouts/container' do %>
  <h1 class="font-bold text-4xl">Novo debito</h1>

  <% if notice.present? %>
    <% notice.split(',').each do |n| %>
      <div>
        <p class="py-2 px-3 bg-red-50 mb-2 text-red-500 font-medium rounded-lg inline-block" id=  "notice"><%= n %></p>
      </div>
    <% end %>
  <% end %>

  <%= render "form", debit: @debit, month_id: @month_id, hide_owner_and_month: false %>
<% end %>
